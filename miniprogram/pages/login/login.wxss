/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 20rpx 60rpx 0; /* 减少顶部内边距，底部设为0 */
  box-sizing: border-box;
  position: relative;
}

/* 主要内容区域 */
.main-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start; /* 改为flex-start，让内容从顶部开始排列 */
    margin-top: 0; /* 确保没有额外顶部间距 */
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-top: 80rpx; /* 增加顶部间距，让logo往下移 */
}

.logo {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx; /* 减少Logo和Tab之间的距离 */
  backdrop-filter: blur(10rpx);
}

.logo-text {
  font-size: 60rpx;
  line-height: 1;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录按钮区域 */
.login-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start; /* 改为flex-start，让内容从顶部开始 */
  align-items: center;
  margin-top: 0; /* 减少上方间距，让输入框离Tab更近 */
}

.login-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 60rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.login-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.login-btn:hover::before {
  left: 100%;
}

.wechat-btn {
  background: #07C160;
  color: #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(7, 193, 96, 0.3);
}

.wechat-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.4);
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.btn-text {
  flex: 1;
  text-align: center;
}

.login-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

.login-tips {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  line-height: 1.5;
}

.link {
  color: #ffffff;
  text-decoration: underline;
}

/* 手机号授权弹窗 */
.phone-auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 1000;
}

.phone-auth-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: #ffffff;
  border-radius: 20rpx;
  width: 600rpx;
  max-width: 90%;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999999;
  border-radius: 50%;
  background: #f5f5f5;
}

.modal-body {
  padding: 40rpx;
}

.auth-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 60rpx;
  text-align: center;
}

.phone-auth-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.phone-auth-btn:active {
  transform: scale(0.98);
}

.phone-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.skip-tips {
  text-align: center;
}

.skip-tips text {
  font-size: 26rpx;
  color: #999999;
  text-decoration: underline;
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 1001;
}

.loading-overlay.show {
  opacity: 1;
  visibility: visible;
}

.loading-content {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

/* 选项卡样式 */
.tab-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  margin: 10rpx auto 20rpx; /* 增加底部间距 */
  background: rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  padding: 8rpx;
  backdrop-filter: blur(10rpx);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #fff;
  border-radius: 32rpx;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #fff;
  color: #7F56D9;
  font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

/* 表单样式 */
.form-group {
  width: 100%;
  margin-bottom: 30rpx; /* 减少输入框之间的距离 */
  position: relative;
}

.form-input {
  width: 100%;
  height: 100rpx;
  /* 给输入框加深一点背景，防止文字看不清 */
  background: rgba(255, 255, 255, 0.2);
  /* 稍微增加边框亮度 */
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 25rpx;
  padding: 0 120rpx 0 40rpx;
  font-size: 30rpx;
  color: #ffffff;
  backdrop-filter: blur(10rpx);
  box-sizing: border-box;
  transition: all 0.3s ease;
}

/* 占位符颜色 - 改为更深的颜色以提高可读性 */
.form-input::placeholder {
  color: rgba(255, 255, 255, 0.8);
  opacity: 1;
}

.form-input:focus {
  border-color: rgba(255, 255, 255, 0.5);
  background: rgba(255, 255, 255, 0.2);
}

.form-input:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* 密码切换按钮 */
.password-toggle {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 授权状态提示 */
.auth-status {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.auth-status.success {
  color: #4CAF50;
}

.auth-status.warning {
  color: #FF9800;
}

/* 账号密码登录按钮 */
.account-btn {
  background: linear-gradient(135deg, #FF6B6B 0%, #4ECDC4 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 107, 0.3);
}

.account-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.4);
}

/* 注册按钮 */
.register-btn {
  background: linear-gradient(135deg, #9C88FF 0%, #6C5CE7 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(156, 136, 255, 0.3);
}

.register-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(156, 136, 255, 0.4);
}

/* 注册区域 - 修正版 */
.register-section {
  position: fixed;  /* 使用 fixed，让它像一个全屏弹窗一样盖在最上面 */
  top: 0;
  left: 0;
  width: 100vw;     /* 宽度占满屏幕 */
  height: 100vh;    /* 高度占满屏幕 */
  z-index: 999;     /* 层级最高 */

  /* 关键点 1：必须给它一个不透明的背景，否则底下的内容会透出来 */
  /* 这里使用和父容器一样的渐变背景，实现"无缝切换"的视觉效果 */
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);

  /* 关键点 2：处理滚动 */
  /* 如果注册内容太长，允许这个层内部滚动，而不是滚动整个页面 */
  overflow-y: auto;

  /* 布局设置 */
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 60rpx; /* 顶部留出空间，避免遮挡手机状态栏 */
  box-sizing: border-box;
}

/* 注册头部 */
.register-header {
  display: flex;
  align-items: center;
  width: 100%;
  margin-bottom: 60rpx;
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  margin-right: 30rpx;
  font-size: 32rpx;
  color: #ffffff;
  backdrop-filter: blur(10rpx);
}

.register-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

/* 切换提示 */
.switch-hint {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 40rpx;
}

/* 隐藏类 */
.login-section:not(.show) {
  display: none;
}

.login-section.show {
  display: block;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .login-container {
    padding: 20rpx 40rpx 0; /* 移动端也减少顶部内边距 */
  }

  .logo-section {
    margin-top: 20rpx; /* 移动端Logo间距也减少 */
  }

  .logo {
    width: 100rpx;
    height: 100rpx;
  }

  .logo-text {
    font-size: 50rpx;
  }

  .app-name {
    font-size: 40rpx;
  }

  .app-desc {
    font-size: 24rpx;
  }

  .login-btn {
    height: 90rpx;
    font-size: 30rpx;
  }

  .form-input {
    height: 90rpx;
    font-size: 28rpx;
    padding: 0 100rpx 0 30rpx;
  }

  .password-toggle {
    right: 20rpx;
    width: 50rpx;
    height: 50rpx;
    font-size: 28rpx;
  }

  .auth-status {
    right: 20rpx;
    font-size: 22rpx;
  }

  .tab-item {
    height: 70rpx;
    font-size: 26rpx;
  }

  .modal-content {
    width: 550rpx;
  }

  .register-header {
    margin-bottom: 40rpx;
  }

  .back-btn {
    width: 70rpx;
    height: 70rpx;
    font-size: 28rpx;
  }

  .register-title {
    font-size: 32rpx;
  }
}