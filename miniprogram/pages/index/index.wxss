  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 150rpx;
  margin-bottom: 20rpx;
}

.go-upload-btn {
  margin-top: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  padding: 0 60rpx;
  box-shadow: 0 6rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.go-upload-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.6s;
}

.go-upload-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 10rpx 24rpx rgba(102, 126, 234, 0.4);
}

.go-upload-btn:hover::before {
  left: 100%;
}

.loading-more {
  text-align: center;
  color: #ccc;
  font-size: 24rpx;
  padding: 20rpx 0;
}

