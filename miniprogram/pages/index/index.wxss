.phone-auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  text-align: center;
}

.modal-title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.modal-body {
  padding: 40rpx 30rpx;
  text-align: center;
}

.auth-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  display: block;
}

.auth-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.auth-tips {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.modal-footer {
  display: flex;
  padding: 0 30rpx 30rpx;
  gap: 20rpx;
}

.cancel-btn, .auth-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

.cancel-btn:active {
  background: #e8e8e8;
  transform: scale(0.98);
}

.auth-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  box-shadow: 0 6rpx 16rpx rgba(102, 126, 234, 0.3);
}

.auth-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}