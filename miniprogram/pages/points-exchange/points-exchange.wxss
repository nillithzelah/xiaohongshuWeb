/* pages/points-exchange/points-exchange.wxss */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.page-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
}

/* 积分卡片 */
.points-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
}

.points-icon {
  font-size: 60rpx;
  margin-right: 24rpx;
}

.points-info {
  flex: 1;
}

.points-value {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 8rpx;
}

.points-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

/* 兑换表单 */
.exchange-form {
  background: linear-gradient(135deg, #ffffff 0%, #fefefe 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.1);
  border: 1rpx solid rgba(0,0,0,0.04);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 30rpx;
  min-height: 80rpx;
  box-sizing: border-box;
  background: #fafafa;
  line-height: 1.4;
}

.input-actions {
  margin-top: 16rpx;
  text-align: right;
}

.all-btn {
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 6rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

/* 兑换预览 */
.exchange-preview {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 20rpx;
}

.preview-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.preview-item:last-child {
  margin-bottom: 0;
}

.preview-label {
  font-size: 26rpx;
  color: #666;
}

.preview-value {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

/* 提示信息 */
.exchange-tips {
  margin-bottom: 40rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 16rpx;
  border-left: 6rpx solid #ffc107;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #856404;
  flex: 1;
  line-height: 1.4;
}

/* 操作区域 */
.action-section {
  padding: 0 20rpx;
}

.exchange-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.exchange-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.exchange-btn[disabled] {
  background: #ccc;
  box-shadow: none;
}