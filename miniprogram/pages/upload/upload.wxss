/* pages/upload/upload.wxss */
page {
  background-color: #f7f8fa;
  padding-bottom: 100rpx;
}

.container {
  padding: 30rpx;
}

/* 设备选择样式 */
.device-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.device-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f9f9f9;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  position: relative;
  transition: all 0.2s;
}

.device-card.selected {
  background: #e6f7ff;
  border-color: #1890ff;
}

.device-info {
  flex: 1;
}

.device-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.device-status {
  font-size: 24rpx;
  display: block;
}

.device-meta {
  text-align: right;
}

.device-points {
  font-size: 26rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.check-mark {
  width: 36rpx;
  height: 36rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 36rpx;
  font-size: 20rpx;
}

.no-devices {
  text-align: center;
  padding: 60rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 步骤标题 */
.section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.step-num {
  width: 40rpx;
  height: 40rpx;
  background: #2b2b2b;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  font-weight: bold;
}

.step-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

/* 类型卡片网格 */
.type-grid {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.type-card {
  width: 30%; /* 三个并排 */
  background: #f9f9f9;
  border: 2rpx solid transparent;
  border-radius: 16rpx;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  transition: all 0.2s;
}

.type-card.selected {
  background: #e6f7ff;
  border-color: #1890ff;
}

.type-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 6rpx;
}

.type-price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.type-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.type-desc {
  font-size: 20rpx;
  color: #999;
  text-align: center;
}

.check-mark {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 36rpx;
  height: 36rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 36rpx;
  font-size: 20rpx;
}

/* 上传区域 */
.upload-area {
  width: 100%;
  height: 300rpx;
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fafafa;
}

.camera-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  color: #ccc;
}

.upload-tip {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.upload-subtip {
  font-size: 22rpx;
  color: #999;
}

/* 预览图片 */
.image-preview {
  width: 100%;
  height: 100%;
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  border: 2rpx solid #eee;
}

.preview-img {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 44rpx;
  height: 44rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  font-size: 32rpx;
}

/* 底部按钮 */
.footer-action {
  margin-top: 40rpx;
  padding: 0 10rpx;
}

.submit-btn {
  background: #ccc;
  color: #fff;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  height: 88rpx;
  line-height: 88rpx;
  transition: all 0.3s;
}

.submit-btn.active {
  background: #1890ff; /* 激活时的颜色 */
  box-shadow: 0 6rpx 20rpx rgba(24, 144, 255, 0.3);
}