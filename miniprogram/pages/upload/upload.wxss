/* pages/upload/upload.wxss */
.container {
  padding: 20rpx;
}

.upload-section {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
}

.type-selector {
  margin-bottom: 20rpx;
}

.type-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.type-options {
  display: flex;
  gap: 20rpx;
}

.type-option {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  background: #f8f8f8;
}

.type-option.active {
  border-color: #07c160;
  background: #e8f5e8;
  color: #07c160;
}

.choose-btn {
  width: 100%;
  background: #07c160;
  color: white;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.choose-btn:disabled {
  background: #ccc;
}

.image-preview {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-btn text {
  color: white;
  font-size: 32rpx;
  line-height: 1;
}

.upload-btn {
  width: 100%;
  background: #ff4757;
  color: white;
  border-radius: 8rpx;
}

.upload-btn:disabled {
  background: #ccc;
}

.tips {
  margin-top: 40rpx;
  padding: 20rpx;
  background: #fff3cd;
  border-radius: 8rpx;
  border-left: 8rpx solid #ffc107;
}

.tips text {
  font-size: 26rpx;
  color: #856404;
  line-height: 1.5;
}