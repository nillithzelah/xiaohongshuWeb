/* pages/upload/upload.wxss */
page {
  background-color: #f7f8fa;
  padding-bottom: 100rpx;
}

.container {
  padding: 30rpx;
}

/* 设备选择样式 */
.device-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.device-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f9f9f9;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  position: relative;
  transition: all 0.2s;
}

.device-card.selected {
  background: #e6f7ff;
  border-color: #1890ff;
}

.device-info {
  flex: 1;
}

.device-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.device-status {
  font-size: 24rpx;
  display: block;
}

.device-meta {
  text-align: right;
}

.device-points {
  font-size: 26rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.check-mark {
  width: 36rpx;
  height: 36rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 36rpx;
  font-size: 20rpx;
}

.no-devices {
  text-align: center;
  padding: 60rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 步骤标题 */
.section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.step-num {
  width: 40rpx;
  height: 40rpx;
  background: #2b2b2b;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  font-weight: bold;
}

.step-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

/* 类型卡片网格 */
.type-grid {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.type-card {
  width: 30%; /* 三个并排 */
  background: #f9f9f9;
  border: 2rpx solid transparent;
  border-radius: 16rpx;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  transition: all 0.2s;
}

.type-card.selected {
  background: #e6f7ff;
  border-color: #1890ff;
}

.type-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 6rpx;
}

.type-price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.type-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.type-desc {
  font-size: 20rpx;
  color: #999;
  text-align: center;
}

.check-mark {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 36rpx;
  height: 36rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 36rpx;
  font-size: 20rpx;
}

/* 上传区域 */
.upload-area {
  width: 100%;
  min-height: 200rpx;
}

/* 新的多图上传样式 */
.upload-tip {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 40rpx 0;
  margin-bottom: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.image-item {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.image-item.add-btn {
  border: 2rpx dashed #ddd;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fafafa;
}

.add-icon {
  font-size: 50rpx;
  color: #ccc;
  margin-bottom: 10rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

.preview-img {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  text-align: center;
  line-height: 32rpx;
  border-radius: 50%;
  font-size: 28rpx;
  z-index: 10;
}

.image-index {
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  z-index: 10;
}

.image-stats {
  text-align: center;
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 0;
}

/* 底部按钮 */
.footer-action {
  margin-top: 40rpx;
  padding: 0 10rpx;
}

.submit-btn {
  background: #ccc;
  color: #fff;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  height: 88rpx;
  line-height: 88rpx;
  transition: all 0.3s;
}

.submit-btn.active {
  background: #1890ff; /* 激活时的颜色 */
  box-shadow: 0 6rpx 20rpx rgba(24, 144, 255, 0.3);
}

/* 上传进度条样式 */
.upload-progress {
  margin: 20rpx 0;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.progress-container {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1890ff, #52c41a);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.progress-percent {
  font-size: 28rpx;
  font-weight: bold;
  color: #1890ff;
}

/* 表单样式 */
.form-group {
  margin-top: 20rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.url-input, .text-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.url-input:focus, .text-input:focus {
  border-color: #1890ff;
}

.input-hint {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999;
  text-align: left;
}

.required-mark {
  color: #ff4d4f;
  margin-left: 8rpx;
  font-size: 32rpx;
}