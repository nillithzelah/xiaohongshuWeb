/* pages/upload/upload.wxss */
page {
  background: #F5F7FA;
  padding-bottom: 100rpx;
  min-height: 100vh;
}

.container {
  padding: 30rpx;
}

/* 设备选择样式 */
.device-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.device-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
  position: relative;
}

.device-card:hover {
  transform: translateY(-1rpx);
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.08);
}

.device-card.selected {
  background: linear-gradient(135deg, #f0f2ff 0%, #e8f2ff 100%);
  border: 1rpx solid #667eea;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.1);
}

.device-card.disabled {
  opacity: 0.5;
  background: #f5f5f5;
  cursor: not-allowed;
}

.device-card.disabled .device-name {
  color: #999;
}

.device-card.disabled .device-status {
  color: #ccc;
}

.device-info {
  flex: 1;
}

.device-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.device-status {
  font-size: 24rpx;
  display: block;
}

.device-meta {
  text-align: right;
}

.device-points {
  font-size: 26rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.check-mark {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 36rpx;
  height: 36rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 36rpx;
  font-size: 20rpx;
  z-index: 10;
}

.no-devices {
  text-align: center;
  padding: 60rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 步骤标题 */
.section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.step-num {
  width: 44rpx;
  height: 44rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 44rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.step-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  background: linear-gradient(135deg, #333 0%, #666 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 类型卡片网格 */
.type-grid {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.type-card {
  width: 30%; /* 三个并排 */
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 12rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  margin-bottom: 16rpx;
}

.type-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.08);
}

.type-card.selected {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.2);
  transform: translateY(-2rpx);
}

.type-card.selected .type-name,
.type-card.selected .type-price {
  color: #fff;
}

.type-card.selected .type-name,
.type-card.selected .type-price {
  color: #fff;
}

.type-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 6rpx;
}

.type-price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.type-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.type-desc {
  font-size: 20rpx;
  color: #999;
  text-align: center;
}

.check-mark {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 36rpx;
  height: 36rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 36rpx;
  font-size: 20rpx;
}

/* 上传区域 */
.upload-area {
  width: 100%;
  min-height: 200rpx;
}

/* 新的多图上传样式 */
.upload-tip {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 40rpx 0;
  margin-bottom: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.image-item {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.image-item.add-btn {
  border: 2rpx dashed #667eea;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #f8f9ff 0%, #e8f2ff 100%);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.image-item.add-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent 30%, rgba(102, 126, 234, 0.1) 50%, transparent 70%);
  transform: translateX(-100%);
  transition: transform 0.6s;
}

.image-item.add-btn:hover::before {
  transform: translateX(100%);
}

.add-icon {
  font-size: 50rpx;
  color: #667eea;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.add-text {
  font-size: 24rpx;
  color: #764ba2;
  font-weight: bold;
  transition: all 0.3s ease;
}

.image-item.add-btn:hover .add-icon {
  transform: scale(1.1);
}

.image-item.add-btn:hover .add-text {
  color: #667eea;
}

.preview-img {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  text-align: center;
  line-height: 32rpx;
  border-radius: 50%;
  font-size: 28rpx;
  z-index: 10;
}

.image-index {
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  z-index: 10;
}

.image-stats {
  text-align: center;
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 0;
}

/* 底部按钮 */
.footer-action {
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.submit-btn {
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  color: #999;
  border-radius: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  height: 88rpx;
  line-height: 88rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.submit-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
  transition: left 0.5s;
}

.submit-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  transform: translateY(-2rpx);
}

.submit-btn.active:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 30rpx rgba(102, 126, 234, 0.5);
}

.submit-btn.active::before {
  left: 100%;
}

/* 上传进度条样式 */
.upload-progress {
  margin: 20rpx 0;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.progress-container {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1890ff, #52c41a);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.progress-percent {
  font-size: 28rpx;
  font-weight: bold;
  color: #1890ff;
}

/* 表单样式 */
.form-group {
  margin-top: 20rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.url-input-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.url-input-container .url-input {
  flex: 1;
  height: 80rpx;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #F7F8FA;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.url-input-container .url-input:focus {
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.15);
  transform: translateY(-1rpx);
}

.paste-btn {
  height: 80rpx;
  padding: 0 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.paste-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.url-input, .text-input {
  width: 100%;
  height: 80rpx;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #F7F8FA;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.url-input:focus, .text-input:focus {
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.15);
  transform: translateY(-1rpx);
}

.text-display {
  width: 100%;
  min-height: 80rpx;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #F7F8FA;
  box-sizing: border-box;
  color: #333;
  line-height: 1.4;
  word-break: break-all;
}

.input-hint {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999;
  text-align: left;
}

.required-mark {
  color: #ff4d4f;
  margin-left: 8rpx;
  font-size: 32rpx;
}

.optional-mark {
  color: #52c41a;
  margin-left: 8rpx;
  font-size: 24rpx;
  font-weight: normal;
}

/* 测试模式样式 */
.test-mode-switch {
  margin-left: auto;
}

.user-selector {
  margin-top: 20rpx;
}

.current-user {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f0f8ff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.user-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.user-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.user-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f9f9f9;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  position: relative;
  transition: all 0.2s;
}

.user-card.selected {
  background: #fff7e6;
  border-color: #faad14;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.user-nickname {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 4rpx;
}

.user-role {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.user-meta {
  text-align: right;
}

.user-points {
  font-size: 26rpx;
  color: #faad14;
  font-weight: bold;
}

.no-users {
  text-align: center;
  padding: 60rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}