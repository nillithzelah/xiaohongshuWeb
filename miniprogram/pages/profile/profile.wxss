/* pages/profile/profile.wxss */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
  position: relative;
}

/* 添加背景装饰 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background:
    radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(120, 219, 226, 0.08) 0%, transparent 50%);
  pointer-events: none;
  z-index: -1;
}

/* 头部区域 */
.profile-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.avatar-section {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 8rpx;
}

.username {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

/* 资产卡片 */
.assets-card {
  background: linear-gradient(135deg, #ffffff 0%, #fefefe 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.1);
  border: 1rpx solid rgba(0,0,0,0.04);
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.assets-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  border-radius: 20rpx 20rpx 0 0;
}

.asset-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.asset-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.asset-info {
  text-align: center;
}

.asset-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.asset-label {
  font-size: 20rpx;
  color: #999;
  display: block;
}

.asset-divider {
  width: 2rpx;
  height: 60rpx;
  background: #f0f0f0;
  margin: 0 30rpx;
}

.asset-vertical-divider {
  position: absolute;
  left: 50%;
  top: 20rpx;
  bottom: 20rpx;
  width: 2rpx;
  background: #f0f0f0;
  transform: translateX(-50%);
}

/* 菜单列表 */
.menu-section {
  background: linear-gradient(135deg, #ffffff 0%, #fefefe 100%);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.1);
  border: 1rpx solid rgba(0,0,0,0.04);
  margin: 0 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.04);
  transition: all 0.3s ease;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  transform: translateX(4rpx);
}

.menu-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 0;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s ease;
}

.menu-item:active::before {
  width: 4rpx;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 50rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
}

/* 底部提示 */
.footer-tips {
  margin-top: 40rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff3cd, #ffeaa7);
  border-radius: 12rpx;
  border-left: 8rpx solid #ffc107;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.footer-tips text {
  font-size: 26rpx;
  color: #856404;
  display: block;
  text-align: center;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .assets-card {
    flex-direction: column;
  }

  .asset-divider {
    width: 200rpx;
    height: 2rpx;
    margin: 20rpx 0;
  }

  .asset-item {
    margin-bottom: 20rpx;
  }

  .asset-item:last-child {
    margin-bottom: 0;
  }
}
